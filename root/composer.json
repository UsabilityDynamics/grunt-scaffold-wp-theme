{
  "name": "{%= github_vendor %}/{%= github_name %}",
  "type": "wordpress-theme",
  "minimum-stability": "dev",
  "homepage": "{%= homepage %}",
  "author": {
    "name": "{%= author_name %}",
    "url": "{%= author_url %}"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://repository.usabilitydynamics.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/{%= github_vendor %}/{%= github_name %}.git"
  },
  "require": {
    "php": ">=5.3",
    "composer/installers": "~1.0",
    "usabilitydynamics/lib-wp-bootstrap": "*"
  },
  "require-dev": {
    "usabilitydynamics/lib-wp-phpunit": "~0.2",
    "codeclimate/php-test-reporter": "~0.1"
  },
  "autoload": {
    "classmap": [ "lib/classes" ]
  },
  "archive": {
    "exclude": [
      "vendor",
      "node_modules",
      ".gitignore",
      "test",
      "circle.yml",
      "composer.lock",
      "gruntfile.js",
      "package.json"
    ]
  },
  "extra": {
    "schemas": {
      "dependencies" : {
        "modules": {},
        "plugins": []
      },
      "licenses" : {
        "client" : false,
        "product" : false
      }
    }
  }
}